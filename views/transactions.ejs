<!DOCTYPE html>
<% const month = ["January","February","March","April","May","June",
"July","August","September","October","November","December"];
const d = new Date();
let mon = month[d.getMonth()];
let day = d.getDate();
let year = d.getFullYear();%>

<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions</title>
</head>
<body>
        <nav class="navbar bg-light">
            <h4><%= mon %> <%= day %>, <%= year %></h4>
            <h4><a href="/transactions/new">New Transaction</h4>
            <h4><a href="/">Logout</a></h4>
        </nav>
        <% if (transactions.length) { %>
            <table class="table" style="width: 40rem">
                <thead>
                    <tr>
                        <th scope="col">Transaction</th>
                        <th scope="col">Date</th>
                        <th scope="col">Type</th>
                        <th scope="col">Category</th>
                        <th scope="col">Amount</th>
                        <th scope="col" style="visibility: hidden;">*</th>
                    </tr>
                </thead>
            <% transactions.forEach(transaction => { 
            let theDate = transaction.date.toLocaleDateString("en-US") %>
                <tbody>
                    <tr>
                        <td><%= transaction.name %></td>
                        <td><%= theDate %></td>
                        <td><%= transaction.type %></td>
                        <td><%= transaction.category %></td>
                        <td>$<%= transaction.amount %></td>
                        <td><form action="/transactions/<%= transaction._id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn-dark">Delete</button>
                            </form>                         
                    </tr>
                </tbody>
            
        <% }) %>
            </table>
        <% } else { %>
            <h2>No transactions added</h2>
        <% } %>

</body>
</html>